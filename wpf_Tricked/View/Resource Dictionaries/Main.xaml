<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--#region Icon & Header -->
    <Style TargetType="TextBlock" x:Key="Title">
        <Setter Property="Text" Value="Managment"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="Image" x:Key="Icon">
        <Setter Property="Source" Value="/Resources/Tricked_Logo.png"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Margin" Value="2"/>
    </Style>
    <!--#endregion-->
    
    <!--#region Context Menu -->
    <Style TargetType="StackPanel" x:Key="ContextPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Button" x:Key="ContextItem">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Width" Value="100"/>
    </Style>
    <!--#endregion-->
    
</ResourceDictionary>